<form method="post" id="updatereviseform" action="/Upload/Idcard" enctype="multipart/form-data">
    <label>选择身份证：</label>  <input type="file" name="upload" />
    <label>是否正面：</label> <input type="checkbox" checked="checked" name="id_card_side" /><br />
    @*<input type="button" id="btn" value="上传" />*@
    <input type="submit" id="btn" value="识别图片" />
    <br />
    <img src="~/images/a1.png" /> <br />
    <textarea id="msgresult" cols="100" rows="10"></textarea>
</form>
<br />
